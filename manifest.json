{
  "manifest_version": 3,
  "name": "RoomCloud Auditor",
  "version": "1.1",
  "description": "Herramienta para auditar hoteles en RoomCloud con persistencia de estado y interfaz mejorada",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://secure.roomcloud.net/*",
    "file://*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RoomCloud Auditor"
  },
  "content_scripts": [
    {
      "matches": [
        "https://secure.roomcloud.net/*",
        "file://*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
